# Core
PORT=17800
PI_CMD=/opt/loong/node_modules/.bin/pi
PI_CWD=/opt/loong
PI_EDIT_ROOT=/opt/loong
LOONG_STATE_DIR=/home/your-user/.loong
LOONG_CONFIG_PATH=/home/your-user/.loong/config.json
LOONG_WEB_DIST=/opt/loong/apps/web/dist
LOONG_PASSWORD=
LOONG_NOTIFY_LOCAL_ONLY=1
LOONG_MAX_BODY_BYTES=262144
LOONG_INSTALL_DIR=/opt/loong
LOONG_PNPM_PATH=/usr/bin/pnpm
LOONG_ENV_FILE=/etc/loong/env
LOONG_LOG_FILE=/home/your-user/.loong/logs/loong.log
LOONG_ERR_FILE=/home/your-user/.loong/logs/loong.err

# Reboot
LOONG_REBOOT_ENABLED=1
LOONG_REBOOT_DELAY_MS=1000
LOONG_SYSTEMD_SERVICE=loong
LOONG_LAUNCHD_LABEL=com.loong.server

# Pipeline (disabled auto-start; set watch dirs in UI)
IMG_PIPELINE_AUTO_START=0
AUDIO_PIPELINE_AUTO_START=0
# Optional pipeline code directories
IMG_PIPELINE_DIR=
AUDIO_PIPELINE_DIR=
# Watch directories (comma-separated). Empty = no auto monitoring.
IMG_PIPELINE_INPUT_DIRS=
AUDIO_PIPELINE_INPUT_DIRS=
IMG_PIPELINE_OUTPUT_DIR=/home/your-user/output
AUDIO_PIPELINE_OUTPUT_DIR=/home/your-user/output/audio-pipeline

# Uploads
LOONG_UPLOAD_DIR=/home/your-user/.loong/uploads
LOONG_UPLOAD_MAX_SIZE=10485760
LOONG_UPLOAD_ALLOWED_TYPES="image/,audio/,video/,application/pdf,text/"
LOONG_UPLOAD_ALLOW_UNKNOWN=true
